// @import url('https://fonts.cdnfonts.com/css/sf-pro-display')

html
    font-size 62.5%

html,
body
    height 100%

body
    min-width 320px
    font-family 'SF Pro Display', sans-serif
    line-height 24px
    font-size 16px
    font-weight 400
    color $white

header,
aside,
section,
footer
    display block


h1
    line-height 46px
    font-size 42px
    font-weight 860
    text-shadow 0 0 48px rgba(#04031a, 0.83)

a
    text-decoration none


.wrapper
    margin 0 auto
    width 100%
    max-width 450px
    min-height 100vh
    display flex
    flex-direction column
    justify-content space-between
    background url(../img/bg.jpg) no-repeat center
    background-size cover
    box-sizing border-box

.content
    margin auto 0 0
    padding 0 24px
    width 100%
    box-sizing border-box

    h1
        margin-bottom 5.997vh
        text-align center

        span
            display block

.btn
    margin-top 1.199vh
    width 100%
    height 56px
    display flex
    align-items center
    justify-content center
    font-size 20px
    color #070B33
    font-weight 590
    background-color $white
    border-radius 30px

    @media(min-height 800px)
        margin-top 1.896vh

    &__close
        width 12px
        height 12px
        display block
        position absolute
        top 20px
        left 24px

        @media(min-height 800px)
            top 28px

        &:before
        &:after
            content ""
            width 100%
            height 1px
            position absolute
            top 50%
            left 0
            background-color rgba($white, 0.4)

        &:before
            transform rotate(45deg)

        &:after
            transform rotate(-45deg)

html[lang=fr]
    h1
        font-size 40px