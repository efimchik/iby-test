.product-list
    margin-bottom 5.997vh
    width 100%
    display flex
    align-items flex-start
    justify-content space-between

    @media(min-height 800px)
        margin-bottom 5.924vh

    &__item
        width calc((100% - 14px) / 3)
        position relative
        overflow hidden
        border-radius 10px

        @media(min-height 800px)
            width calc((100% - 28px) / 3)

        &-thumbnail
            padding-top 132.28%
            width 100%
            height 0

            img
                width 102%
                display block
                position absolute
                top 50%
                left 50%
                transform translate(-50%, -50%)

        &-title
            padding 0 7px
            width 100%
            line-height normal
            font-size 11px
            position absolute
            left 0
            bottom 10px
            box-sizing border-box

            span
                display block

html[lang=es]
    .product-list__item-title
        font-size 9px

html[lang=pt]
    .product-list__item-title
        font-size 9px
